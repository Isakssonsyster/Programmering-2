<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Simple Quiz Game" Height="600" Width="800">
    <Canvas Name="myCanvas" Background="Beige">

        <Label Name="scoreText" FontSize="18">Score: 0/10</Label>
        <Label Name="questionOrder" FontSize="18" Canvas.Left="362">Questions</Label>

        <TextBlock Name="questionTxt" TextAlignment="Center" Padding="3" FontSize="20" Width="572" TextWrapping="Wrap" Canvas.Left="111" Canvas.Top="101">If You Don't Wanna See Me Dancing With Somebody</TextBlock>

        <Button Background="Lavender" FontSize="18" Click="checkAnswer" Name="ans1" Width="443" Height="50" Content="7 Rings - Ariana Grande" Tag="0" Canvas.Left="186" Canvas.Top="178"/>
        <Button Background="Lavender" FontSize="18" Click="checkAnswer" Name="ans2" Width="443" Height="50" Content="New Rules - Dua Lipa" Tag="0" Canvas.Left="186" Canvas.Top="269"/>
        <Button Background="Lavender" FontSize="18" Click="checkAnswer" Name="ans3" Width="443" Height="50" Content="Don't Start Now - Dua Lipa" Tag="1" Canvas.Left="186" Canvas.Top="362"/>
    </Canvas>
</Window>
